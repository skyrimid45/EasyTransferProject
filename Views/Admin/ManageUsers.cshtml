@model IEnumerable<Project.Models.Customer>
 < !--Use the correct model for customers-- >

@{
    ViewBag.Title = "Manage Users";
}

<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td> <!-- Display the role -->
                <td>
                    @using (Html.BeginForm("ManageUsers", "Admin", FormMethod.Post))
                    {
                        <input type="hidden" name="customerId" value="@user.CustId" />
                        <select name="role">
                            <option value="Admin" @(user.Role == "Admin" ? "selected" : "")>Admin</option>
                            <option value="User" @(user.Role == "User" ? "selected" : "")>User</option>
                        </select>
                        <input type="submit" value="Change Role" />
                    }
                    <!-- Delete User Form -->
                    @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post))
                    {
                        <input type="hidden" name="customerId" value="@user.CustId" />
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this user?');" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

