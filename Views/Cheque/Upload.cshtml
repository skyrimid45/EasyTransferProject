@{
    ViewBag.Title = "Upload Cheque";
}

<h2>Upload a Cheque</h2>

@using (Html.BeginForm("Upload", "Cheque", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>Upload Image</label>
        <input type="file" id="chequeUpload" name="chequeImage" class="form-control" required />
        <button type="button" class="btn btn-danger mt-2" onclick="clearChequeFile()">Remove</button>
    </div><br />

    <div class="form-group">
        <label>Deposit Amount</label>
        <input type="number" step="0.01" name="amount" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Deposit Into</label>
        <select name="accountType" class="form-control" required>
            <option value="">--Select Account--</option>
            <option value="Chequings">Chequings</option>
            <option value="Savings">Savings</option>
        </select>
    </div>

    <button type="submit" class="btn btn-danger mt-2">Upload</button>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}

<div class="text-center">
    @Html.ActionLink("Back to Home", "CustomerHome", "Home", new { area = "" }, new { @class = "btn btn-primary" })
</div>

@section scripts {
    <script>function clearChequeFile() {
            document.getElementById("chequeUpload").value = "";
        }</script>
}



