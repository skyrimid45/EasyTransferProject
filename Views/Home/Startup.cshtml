@{
    ViewBag.Title = "Welcome to EasyTransfer";
}

<div class="container mt-5 text-center">
    <h1 class="mb-4">Welcome to EasyTransfer</h1>
    <p class="lead mb-5">Please choose how you would like to log in:</p>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("Login", "Admin")" class="btn btn-lg btn-primary btn-block">
                Admin Login
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("Login", "Customer")" class="btn btn-lg btn-success btn-block">
                Customer Login
            </a>
        </div>
    </div>
</div>
